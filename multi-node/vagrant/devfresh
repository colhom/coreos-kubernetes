#!/bin/bash -e

tar cf - etcd2-restore-first *.{service,timer} etcd2-spam rclone.conf | vagrant ssh -c "tar xf -" e1

vagrant ssh -c "
sudo systemctl stop etcd2-backup.{timer,service} && \
sudo cp ./rclone.conf /etc/ && \
sudo chmod 755 ./etcd2-restore-first && \
	sudo mv *.{service,timer} /etc/systemd/system/ && \
	sudo systemctl daemon-reload && \
sudo systemctl start etcd2-backup.{timer,service}
" e1
